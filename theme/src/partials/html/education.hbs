{{#section "education"}}
<section class="section">
  {{#> header-education }}
  <header>
    <h2 class='section-title'>Education</h2>
  </header>
  {{/header-education}}

  <section id="education">
    {{#each r.education.history}}
      {{#> body-education }}
      <section class="education-item">
        <header class="cf">
          <div class="header-left">
            <div class="studyType">
              {{ studyType }}
            </div>
            {{#if area}}
            <div class="area">
              {{{ area }}}
            </div>
            {{/if}}
            {{#if institution}}
            <div class="institution">
              {{institution}}
            </div>
            {{/if}}
          </div>
        <span class="location">
          <span class="fa fa-map-marker"></span>
          <span class="city">{{ location }}</span>
        </span>

          <div class="date">
            {{#if start}}
            <span class="startDate">
            {{Y start}}
            </span>
            {{/if}}
            {{#if end}}
            <span class="endDate">
            - {{Y end}}
            </span>
            {{else}}
            <span class="endDate">
            - Current
            </span>
            {{/if}}
          </div>
        </header>

        <div class="item">
          {{#if keywords.length}}
        <ul class="keywords">
          {{#each keywords}}
          <li>{{.}}</li>
          {{/each}}
        </ul>
        {{/if}}
          {{#if gpa}}
          <div class='gpa'>
            <strong> Grade:</strong> <span>{{gpa}}</span>
          </div>
          {{/if}}
          {{#if summary}}
          <div class="summary">
            <p>{{paragraphSplit summary}}</p>
          </div>
          {{/if}}
        </div>
      </section>
      {{/body-education}}
    {{/each}}
  </section>
</section>
{{/section}}
